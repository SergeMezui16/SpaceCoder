{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}

<div class="login">
    <div class="login-card">
        <div class="login-img">
            <img class="" src="https://blush.design/api/download?shareUri=irHcRwfWyq5sQrx6&c=Bottom_0%7E342a83-0.1%7E2b44ff_Hair_0%7Eb58143-0.1%7E2c1b18_Skin_0%7Eb28b67-0.1%7E57331f_Top_0%7Eff4133-0.1%7Ef2f2f2&bg=9000f7&w=800&h=800&fm=png" alt="Login" />
        </div>
        <form action="{{ path('authentication_login') }}" method="POST" class="login-form">
            <h1 class="text-center text-4xl mb-10">Connexion</h1>
            <div class="form-control">
                <label for="username" class="">Email</label>
                <input type="text" name="_username" class="w-full form-input"/>
            </div>
            <div class="form-control">
                <label for="password" class="">Mot de passe</label>
                <input type="password" name="_password" id="password" class="w-full form-input" />
            </div>
            <div class="form-control">
                <label for="checkbox" class="">
                    <input type="checkbox" name="_remember_me" id="checkbox" class="mr-2 form-input" checked/>
                    Se souvenir de moi.
                </label>
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="flex justify-center">
                <input type="submit" name="submit" id="sub" value="Se connecter >" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

{% endblock %}
