{% extends 'base.html.twig' %}

{% block title %}{{article.title}} — SpaceCoder{% endblock %}

{% block meta %}

        <!-- Primary Meta Tags -->
        <meta name="title" content="{{article.title}} — SpaceCoder">
        <meta name="description" content="{{article.description}}">

        <!-- Open Graph / Facebook -->
        <meta property="og:type" content="website">
        <meta property="og:url" content="{{absolute_url(path('article_detail', {slug: article.slug}))}}">
        <meta property="og:title" content="{{article.title}} — SpaceCoder">
        <meta property="og:description" content="{{article.description}}">
        <meta property="og:image" content="{{article.image}}">
        <meta property="article:author" content="{{article.author}}">
        <meta property="article:published_time" content="{{article.updateAt | date('Y/m/d')}}">
        <meta property="article:section" content="Technologies">


        <!-- Twitter -->
        <meta property="twitter:card" content="summary_large_image">
        <meta property="twitter:url" content="{{absolute_url(path('article_detail', {slug: article.slug}))}}">
        <meta property="twitter:title" content="{{article.title}} — SpaceCoder">
        <meta property="twitter:description" content="{{article.description}}">
        <meta property="twitter:image" content="{{article.image}}">

{% endblock %}

{% block body %}

{% include "article/_article.html.twig" %}
{% include "article/_comments.html.twig" %}

{% endblock %}
