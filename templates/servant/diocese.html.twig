{% extends 'servant/base.html.twig' %}

{% block title %}Diocese {{ diocese.name }}{% endblock %}


{% block body %}
<div class="bg-gray-100 border bg-cover bg-center p-4 rounded mb-5">
	<h1 class="text-5xl">
		Diocèse
		{{ diocese.name }}
	</h1>
	<div class="flex">
		<div class="flex-1 md:flex items-start justify-start hidden">
			<img class="w-full  max-h-80 rounded m-5" src="{% if diocese.image %}/data/servant/images/{{diocese.image}}{% else %}/favicon.svg{% endif %}" alt="">
		</div>
		<div class="flex-1">

			<table class="table-fixed w-full">
				<tbody class="">
					<tr>
						<td class="text-gray-700 py-3">
							Nom
						</td>
						<td class="text-end">
							{{ diocese.name }}
						</td>
					</tr>
					<tr>
						<td class="text-gray-700 py-3">
							Localisation
						</td>
						<td class="text-end">
							{{ diocese.location }}
						</td>
					</tr>
					<tr>
						<td class="text-gray-700 py-3">
							Évèque
						</td>
						<td class="text-end">
							{{ diocese.bishop }}
						</td>
					</tr>
					<tr>
						<td class="text-gray-700 py-3">
							Aumonier Diocesain
						</td>
						<td class="text-end">
							{{ diocese.chaplain }}
						</td>
					</tr>
					<tr>
						<td class="text-gray-700 py-3">
							Saint Patron
						</td>
						<td class="text-end">
							{{ diocese.patronSaint }}
						</td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>

</div>


