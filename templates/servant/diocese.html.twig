{% if diocese.zones | length != 0 %}
	<div class="bg-gray-100 p-4 rounded border">

		<h3 class="text-3xl">Liste des Zones ({{ diocese.zones | length }}) </h3>
		<hr>
		<div class="flex flex-wrap gap-5 py-5">
			{% for zone in diocese.zones %}
				<div class="w-60 rounded border">
					<div class="h-32 bg-cover bg-center rounded-t" style="background-image: url('{% if diocese.image %}/data/servant/images/{{zone.image}}{% else %}/favicon.svg{% endif %}')"></div>

					<a class="p-2 block hover:text-purple-500" href="{{ path('servant_zone', {id: zone.id}) }}">{{zone.name}}</a>
				</div>
			{% endfor %}
		</div>

	</div>
{% endif %}



{% endblock %}
